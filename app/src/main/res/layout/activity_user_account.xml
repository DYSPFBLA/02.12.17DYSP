<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_account"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="fbla.mobileapp.app.dysp.UserAccountActivity">

    <TextView
        android:text="Fundraising For:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:id="@+id/textView13"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:layout_below="@+id/profile_image"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/settingscogs"
        android:id="@+id/accountsettings"
        android:layout_alignBottom="@+id/profile_image"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="61dp" />

    <TextView
        android:text="Location:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_alignBottom="@+id/profile_image"
        android:layout_alignStart="@+id/textView2" />

    <TextView
        android:text="Fundraising For:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:id="@+id/textView11"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:layout_below="@+id/profile_image"
        android:layout_alignParentStart="true" />

    <ProgressBar
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:id="@+id/progressBar9"
        android:layout_below="@+id/textView13"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="$0/$0 Raised"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="11dp"
        android:id="@+id/progressText"
        android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Title"
        android:layout_below="@+id/progressBar9"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"
        android:layout_below="@+id/progressText"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp" />

    <TextView
        android:text="Items For Sale:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView15"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView15"
        android:layout_toStartOf="@+id/fblamemberyear"
        android:layout_above="@+id/donateButton"
        android:layout_alignParentEnd="true"
        android:id="@+id/listView" />

    <TextView
        android:text="No Items Currently!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/NoItems"
        android:gravity="center"
        android:textAppearance="@android:style/TextAppearance.Material.Headline"
        android:layout_marginBottom="22dp"
        android:layout_above="@+id/donateButton"
        android:layout_centerHorizontal="true" />

    <ProgressBar
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar6"
        android:layout_marginBottom="11dp"
        android:layout_above="@+id/NoItems"
        android:layout_toEndOf="@+id/textView13" />

    <TextView
        android:text="Nationals Airfare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fundraisingfor"
        android:textColor="@android:color/holo_blue_dark"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_alignTop="@+id/textView13"
        android:layout_toEndOf="@+id/textView4" />

    <Button
        android:text="Contact "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Contact"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/donateButton" />

    <Button
        android:text="Donate To "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/donateButton"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/fundraisingfor" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/largeuser"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Joined FBLA:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_below="@+id/displayName"
        android:layout_alignEnd="@+id/progressBar6"
        android:layout_marginTop="14dp" />

    <TextView
        android:text="Florida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_blue_dark"
        android:id="@+id/location"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignEnd="@+id/fblamemberyear" />

    <TextView
        android:text="John Doe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/displayName"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:layout_alignBottom="@+id/accountsettings"
        android:layout_alignStart="@+id/textView2" />

    <TextView
        android:text="2014"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_blue_dark"
        android:id="@+id/fblamemberyear"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignEnd="@+id/Contact" />

</RelativeLayout>
